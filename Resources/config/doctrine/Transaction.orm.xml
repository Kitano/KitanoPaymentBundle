<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Kitano\PaymentBundle\Model\Transaction" inheritance-type="JOINED" table="kitano_payment_transactions">
        <discriminator-column name="discr" type="string" />
        <discriminator-map>
            <discriminator-mapping value="authorize" class="Kitano\PaymentBundle\Model\AuthorizationTransaction" />
            <discriminator-mapping value="capture" class="Kitano\PaymentBundle\Model\CaptureTransaction" />
        </discriminator-map>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="transactionId" column="tr_transaction_id" type="string" length="255" unique="true" nullable="true" />
        <field name="orderId" column="tr_order_id" type="string" length="255" nullable="true" />
        <field name="amount" column="tr_amount" type="decimal" precision="10" scale="2" />
        <field name="currency" column="tr_currency" type="string" length="3" />
        <field name="date" column="tr_date" type="datetime" />
        <field name="country" column="tr_country" type="string" length="2" />
        <field name="extraData" column="tr_extra_data" type="array" nullable="true" />
        <field name="state" column="tr_state" type="smallint" />
        <field name="success" column="tr_success" type="boolean" />
        <field name="message" column="tr_message" type="string" length="255" nullable="true" />
        <field name="createdAt" column="tr_created_at" type="datetime" />
        <field name="updatedAt" column="tr_updated_at" type="datetime" />

    </entity>

</doctrine-mapping>
